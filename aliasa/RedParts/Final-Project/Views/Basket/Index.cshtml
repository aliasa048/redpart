@using Final_Project.ViewModels.Basket

@model BasketIndexVM


@{
    ViewData["Title"] = "Index";

    decimal endTotal = 0;

}





@section Css
{
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.6.15/sweetalert2.css" />

    <link rel="stylesheet" href="~/Assets/css/basket/basket.css">

}

<!-- Start Main Area -->
<main>
    
    <section id="heart-area">
        <div class="container">
            <div class="row">
                <h1>Basket products</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody class="tb-body">
                        @foreach (var basketProducts in Model.BasketProducts)
                        {
                            <tr class="basket-product" id="@basketProducts.Id">
                                <td><img style="width:170px; height:170px" src="~/assets/img/product/@basketProducts.Image" alt="Alternate Text" /></td>
                                <td>@Html.Raw(basketProducts.Name)</td>
                                <td>@basketProducts.Quantity</td>
                                <td>@basketProducts.Price.ToString("##.00") ₼</td>
                                <td>@basketProducts.Total.ToString("##.00") ₼</td>
                                <td class="basket-delete">
                                    <button data-id="@basketProducts.Id" data-quantity="@basketProducts.Quantity" id="deleteBtn" class="btn btn-danger">Delete</button>
                                </td>
                            </tr>


                            endTotal = endTotal + basketProducts.Total;


                        }
                    </tbody>
                </table>
                <div style="background-color: #4D5357 !important; padding:30px; width:250px !important; height:80px !important;">
                    <span style="color:white; margin-top:20px !important">Total price:</span>

                    <span style="color:white">@endTotal.ToString("##.00") ₼</span>

                </div>

            </div>


        </div>
    </section>
</main>
<!-- end Main Area -->

@section Scripts
{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.4.30/sweetalert2.all.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://kit.fontawesome.com/0622708fc2.js" crossorigin="anonymous"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.6.15/sweetalert2.min.js"></script>

    <script src="~/Assets/js/basket/basket.js"></script>


}

