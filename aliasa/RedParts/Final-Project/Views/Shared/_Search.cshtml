@model List<Product>

@foreach (var item in Model)
{
    <li class="search-nameli" style="list-style:none;  margin-bottom:10px;" >
        <a style="color:gray !important;text-decoration:none; " asp-controller="ShopDetail" asp-action="Index" asp-route-id="@item.Id">
            <img style="border-radius:50px" src="~/assets/img/product/@item.ProductImage.FirstOrDefault(m=>m.IsMain).Image" alt="banner" width="100" height="100">
            Name:<span style="color: #3B86D1 "> @Html.Raw(item.Name)</span>
            Price:<span style="color: #3B86D1 ">
                @item.Price.ToString("##.00")

            </span>
        </a>
    </li>
}

