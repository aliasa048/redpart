@model Blog





<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            Blog detail
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Intro
                    </th>
                    <th>
                        Context
                    </th>
                    <th>
                        Creator
                    </th>
                    <th>
                        CreateDate
                    </th>

                </tr>
            </thead>
            <tbody>


                <tr>
                    <td style="width:150px" ;>
                        <img src="~/assets/img/blog/@Model.Image" alt="Alternate Text" />
                    </td>
                    <td>
                        @Model.Title
                    </td>
                    <td>
                        @Model.Intro
                    </td>
                    <td>
                        @Model.Content
                    </td>
                    <td>
                        @Model.Creator
                    </td>
                    <td>
                        @Model.CreateDate
                    </td>

                </tr>



            </tbody>
        </table>


    </div>
    <a asp-controller="Blog" asp-action="Index" class="btn btn-primary my-3">Back</a>
</div>