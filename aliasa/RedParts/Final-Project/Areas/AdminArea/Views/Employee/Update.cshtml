@model EmployeeEditVM
@{
    ViewData["Title"] = "Update";
}


<div class="container">
    <h1>Employee</h1>
    <form asp-action="Update" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label class="my-4" for="exampleInputUsername1">Fullname</label>
            <textarea class="form-control rounded-0" id="title-area" rows="3" asp-for="FullName"></textarea>
            <span class="text-danger my-1" asp-validation-for="FullName"></span>
        </div>
        <div class="form-group">
            <label class="my-4" for="exampleInputUsername1">Position</label>
            <textarea class="form-control rounded-0" id="header-area" rows="3" asp-for="Position"></textarea>
            <span class="text-danger my-1" asp-validation-for="Position"></span>
        </div>
        <div class="form-group">
            <input class="form-control mybutton" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <button type="submit" class="mybutton">Update</button>
        <a class="mybutton" asp-controller="Employee" asp-action="Index">Back</a>
    </form>
</div>

@section Scripts{
    <script src="~/ckeditor/ckeditor.js"></script>
}
