@model ProductCategoryCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <span class="text-danger">@ViewBag.Message</span>
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card" style=" margin-left: 10px;">
                    <div class="card-body">
                        <p class="card-description">Category</p>
                        <form asp-controller="ProductCategory" asp-action="Create" class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label class="my-4" for="exampleInputUsername1">Name</label>
                                <textarea class="form-control rounded-0" id="title-area" rows="3" asp-for="Name"></textarea>
                                <span class="text-danger my-1" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <input class="form-control mybutton" asp-for="Photo">
                                <span class="text-danger" asp-validation-for="Photo"></span>
                            </div>
                            <button type="submit" class="mybutton">Submit</button>
                            <a asp-controller="ProductCategory" asp-action="Index" class="mybutton">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationPartial" />

    <script src="~/ckeditor/ckeditor.js"></script>

    <script>
        CKEDITOR.replace("header-area")
        CKEDITOR.replace("description-area")
        CKEDITOR.replace("title-area")
    </script>
}
