@model Paginate<CountryListVM>

<div class="container">
    <div class="table-responsive pt-3">
        <div class="create-btn mb-3">
            <a asp-controller="Country" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i></a>
        </div>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th style="text-align: center;">
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.Datas)
                {
                    <tr>
                        <td>
                            <Span>@item.Name</Span>
                        </td>
                        <td style="text-align: center;">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                            <form style="display: inline-block;" asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>